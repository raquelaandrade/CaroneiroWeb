
@{
    Layout = "~/Views/Shared/_LayoutFriend.cshtml";
    int idFriend = Convert.ToInt32(ViewBag.idFriend);

}
<h3>Enviar mensagem <i class="fa fa-envelope pull-right"></i></h3>
<hr />
<ul class="nav nav-pills">
    <li role="presentation">@Html.ActionLink("Anúncios", "ListAdsFriends", "People", new { id = idFriend }, new { @class = "btn btn-default btn-xs" })</li>
    <li role="presentation">@Html.ActionLink("Sobre", "FriendPerfil", "People", new { id = idFriend }, new { @class = "btn btn-default btn-xs" })</li>
    <li role="presentation" class="active">@Html.ActionLink("Enviar mensagem", "Message", "People", new { id = @idFriend }, new { @class = "btn btn-default btn-xs" })</li>
</ul>
<hr />
<div class="col-xs-12 col-sm-9 col-md-9">
    @using (Html.BeginForm("Message", "People", FormMethod.Post, new { id = idFriend }))
    {
        <div>
            @Html.TextArea("message", "", new { @class = "form-control" }) <br />

            <input type="submit" value="Enviar" class="btn-info" />
        </div>
    }
    @ViewBag.messagefeedback
</div>

@using System.Web.Optimization
@{
    var nameUser = Session["name_user"];

    var img = Session["image"];
    var st = Session["state"];
    int numMsg = Convert.ToInt32(Session["qtdMsg"]);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Caroneiro</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Design/layoutMaster/dashboard.css" rel="stylesheet">
    <link href="~/Content/fontawesome/font-awesome.min.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        .navbar-inverse {
            background-color: #4682B4;
        }

        .btnShowModal {
            width: 300px;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <h3 style="color:white">Caroneiro</h3>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sair", "Logout", "Access", new { }, new { style = "color: white" })</li>
                </ul>
                <nav class="navbar-form navbar-right">
                   
                </nav>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <img class="img-responsive img-circle image-centered" src="@img">
                <br />
                <hr />
                <ul class="nav nav-sidebar">
                    <li class="text-center"><h4 class="text-info">Olá @nameUser </h4></li>
                </ul>
                <hr />
                
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderBody()
            </div>
        </div>
        <br />
        <br /><br /><br />
        <footer>
            <center><h5 class="text-center">Copyright 2017 - All Rights Reserved - <a href="#">Caroneiro</a></h5></center>           
        </footer>
    </div>
    
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>


    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="../../assets/js/vendor/holder.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->

@model CaroneiroWeb.Models.Contact
<!-- Top Background Image Wrapper -->
<div class="bgded" style="background-image:url(@Url.Content("~/Design/images/logo.jpg"));">
    <div class="overlay">
        <div class="wrapper row0">
            <div id="topbar" class="clear">
                <!-- ################################################################################################ -->
                <div class="fl_right">
                    <ul class="faico clear">
                        <li><a class="faicon-facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a class="faicon-twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a class="faicon-google-plus" href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
                <!-- ################################################################################################ -->
            </div>
        </div>
        <div class="wrapper row1">
            <header id="header" class="clear">
                <!-- ################################################################################################ -->
                <div id="logo" class="fl_left">
                    <h1>@Html.ActionLink("Caroneiro", "Index", "Home")</h1>
                </div>
                <!-- ################################################################################################ -->
            </header>
        </div>
        <div class="container">
            <div class="form-signin">
                <h2 style="color:white">Fale com nós</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="cols-md-12">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Informe seu nome" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { style = "color: white" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-md-12">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Informe seu email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { style = "color: white" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-md-12">
                            @Html.DropDownListFor(model => model.topic, new SelectList(new string[] { "Dúvida", "Reclamação", "Sugestão", "Elogios", "Problemas no cadastro","Problemas com outro usuário"}), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.topic, "", new { style = "color: white" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-md-12">
                            @Html.TextAreaFor(model => model.message , new { rows = "10", cols = "40", @placeholder="Escreva sua mensagem aqui..." })
                            @Html.ValidationMessageFor(model => model.message, "", new { style = "color: white" })
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="cols-md-12">
                            <h4 style="color:white">@ViewBag.send</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-md-12">
                            <input type="submit" value="Enviar" class="btn btn-lg btn-info btn-block" />
                        </div>
                    </div>
                }
            </div>
        </div> <!-- /container -->
        <br />
        <br />
    </div>
    <!-- End Top Background Image Wrapper -->
    <div class="wrapper row5">
        <div id="copyright" class="clear">
            <!-- ################################################################################################ -->
            <p class="fl_left">Copyright &copy; 2017 - All Rights Reserved - Caroneiro
            <p class="fl_right"><a href='@Url.Action("About","Home")'>Sobre - </a><a href='@Url.Action("Contact","Home")'>Contato - </a><a href='@Url.Action("TermsOfUse","Home")'>Termos de Uso</a></p>
            <!-- ################################################################################################ -->
        </div>
    </div>
</div>

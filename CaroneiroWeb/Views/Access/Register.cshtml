@model CaroneiroWeb.Models.Users
<!-- Top Background Image Wrapper -->
<div class="bgded" style="background-image:url(@Url.Content("~/Design/images/logo.jpg"));">
    <div class="overlay">
        <div class="wrapper row0">
            <div id="topbar" class="clear">
                <!-- ################################################################################################ -->
                <div class="fl_right">
                    <ul class="faico clear">
                        <li><a class="faicon-facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a class="faicon-twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a class="faicon-google-plus" href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
                <!-- ################################################################################################ -->
            </div>
        </div>
        <div class="wrapper row1">
            <header id="header" class="clear">
                <!-- ################################################################################################ -->
                <div id="logo" class="fl_left">
                    <h1>@Html.ActionLink("Caroneiro", "Index", "Home")</h1>
                </div>
                <nav id="mainav" class="fl_right">
                    <ul class="clear">
                        <li>@Html.ActionLink("Login", "Login", "Access")</li>
                        <li class="active">@Html.ActionLink("Cadastro", "Register", "Access")</li>
                    </ul>
                </nav>
                <!-- ################################################################################################ -->
            </header>
        </div>
        <div class="container">
            <div class="form-signin">
                <h2 style="color:white">Cadastro</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { style = "color: white" })
                    <div class="form-group">
                        <div class="cols-md-10">
                            @Html.EditorFor(model => model.name_user, new { htmlAttributes = new { @class = "form-control" , @placeholder = "nome de usuário" } })
                            @Html.ValidationMessageFor(model => model.name_user, "", new { style = "color: white" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="cols-md-10">
                            @Html.DropDownListFor(model => model.genre, new SelectList(new string[] { "Mulher", "Homem"}), new { @class = "form-control"})
                        </div>
                    </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.date_birth, htmlAttributes: new { @class = "control-label col-md-4", style="color:white" })
                            <div class="cols-md-4">
                                @Html.EditorFor(model => model.date_birth, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.date_birth, "", new { style = "color: white" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                @Html.EditorFor(model => model.state, new { htmlAttributes = new { @class = "form-control", @placeholder = "estado" } })
                                @Html.ValidationMessageFor(model => model.state, "", new { style = "color: white" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control", @placeholder = "cidade" } })
                                @Html.ValidationMessageFor(model => model.city, "", new { style = "color: white" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "email" } })
                                @Html.ValidationMessageFor(model => model.email, "", new {  style = "color: white" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                @Html.EditorFor(model => model.password_user, new { htmlAttributes = new { @class = "form-control", @placeholder = "senha" } })
                                @Html.ValidationMessageFor(model => model.password_user, "", new { style = "color: white" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                @Html.EditorFor(model => model.password_confirm, new { htmlAttributes = new { @class = "form-control", @placeholder = "confirme a senha" } })
                                @Html.ValidationMessageFor(model => model.password_confirm, "", new { style = "color: white" })
                            </div>
                        </div>
                        <div class=" form-group">
                            <div class="col-md-12">
                                <h4 style="color:white">@ViewBag.register</h4>
                                <h4 style="color:white">@ViewBag.success</h4>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="cols-md-10">
                                <h5 style="color:white">Ao se cadastrar você concorda com nossos termos de uso e política de privacidade.</h5>
                            </div>
                        </div>
                        <div class="form-group ">
                            <input type="submit" value="Cadastrar" class="btn btn-lg btn-primary btn-block" />
                        </div>
                }
            </div>
        </div>
    </div>
    <!-- End Top Background Image Wrapper -->
    <div class="wrapper row5">
        <div id="copyright" class="clear">
            <!-- ################################################################################################ -->
            <p class="fl_left">Copyright &copy; 2017 - All Rights Reserved - Caroneiro
            <p class="fl_right"><a href='@Url.Action("About","Home")'>Sobre - </a><a href='@Url.Action("Contact","Home")'>Contato - </a><a href='@Url.Action("TermsOfUse","Home")'>Termos de Uso</a></p>
            <!-- ################################################################################################ -->
        </div>
    </div>
</div>

@model CaroneiroWeb.Models.Users

@{
    Layout = "~/Views/Shared/_LayoutFirstAccess.cshtml";
}

<h3>Obrigada por se juntar a nós! Complete seu perfil para melhorar sua experiência no Caroneiro. <i class="fa fa-pencil pull-right"></i></h3>
<hr />
<h5 class="text-primary">Por ser seu primeiro acesso as informações com * devem ser preenchidas.</h5>
<div class="col-xs-12 col-sm-9 col-md-9">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2"> Nome<text class="text-danger"> *</text> </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name_user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name_user, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2"> Data de nascimento<text class="text-danger"> *</text> </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.date_birth, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control", style = "width:200px" } })
                    @Html.ValidationMessageFor(model => model.date_birth, "", new { @class = "text-warning" })
                    @ViewBag.error1
                    @ViewBag.register
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Eu sou<text class="text-danger"> *</text> </label>
                <div class="col-md-10">
                    @Html.RadioButton("genre", "Homem") Homem <br />
                    @Html.RadioButton("genre", "Mulher") Mulher
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Estado<text class="text-danger"> *</text> </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.state, new { htmlAttributes = new { @class = "form-control", @placeholder="Exemplo: 'RS'" } })
                    @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Cidade<text class="text-danger"> *</text> </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control", @placeholder="Exemplo: 'Torres'" } })
                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.religion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.religion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.religion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.relationship, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.relationship, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.relationship, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.schooling, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.schooling, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.schooling, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.profession, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.profession, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.profession, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.pref_music, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.pref_music, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pref_music, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.emotional, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.emotional, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.emotional, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar alteração e ir para a página principal" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</div>
   

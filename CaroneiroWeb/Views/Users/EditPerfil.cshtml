@model CaroneiroWeb.Models.Users

@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h3>Editar perfil <i class="fa fa-pencil pull-right"></i></h3>
<hr />
<ul class="nav nav-pills">
    <li role="presentation">@Html.ActionLink("Perfil", "Perfil", "Users", new { area = "" }, new { @class = "btn btn-default btn-xs" })</li>
    <li role="presentation" class="active">@Html.ActionLink("Editar perfil", "EditPerfil", "Users", new { area = "" }, new { @class = "btn btn-default btn-xs" })</li>
